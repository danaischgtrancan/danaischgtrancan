{% extends 'base.html.twig' %}
{% block stylesheets %}
	<link href="{{asset('css/header.css')}}" rel="stylesheet" media="all">
{% endblock %}
{% block body %}
	<!-- Shop Start -->
	<div class="container-fluid">
		<div
			class="row ms-3">
			<!-- Shop Sidebar Start -->
			<div
				class="col-lg-3 col-sm-3 shadow-sm p-3 mb-5 bg-body rounde">
				<!-- Category Start -->
				<div class="border-bottom mb-4 pb-4">
					<div class="row">
						<h5 class="font-weight-semi-bold mb-4">Category</h5>
						<div>
							{% for c in catefories %}
								<a href="?sort_by=category&order={{c.cate_name}}">{{c.cate_name}}</a>
								<br>
							{% endfor %}
						</div>

					</div>
				</div>
				<!-- Category End -->

				<!-- Supplier Start -->
				<div class="border-bottom mb-4 pb-4">
					<div class="row">
						<h5 class="font-weight-semi-bold mb-4">Supplier</h5>
						<div>
							{% for s in suppliers %}
								<a href="?sort_by=supplier&order={{s.supp_name}}">{{s.supp_name}}</a>
								<br>
							{% endfor %}
						</div>

					</div>
				</div>
				<!-- Supplier End -->

				<!-- For Gender Start -->
				<div class="border-bottom mb-4 pb-4 filter">
					<div class="row">
						<h5 class="font-weight-semi-bold mb-4">For Gender</h5>
						<a href="?sort_by=gender&order=men">Men's Clothing</a>
						<a href="?sort_by=gender&order=women">Women's Clothing</a>
					</div>
				</div>
				<!-- For Gender End -->

				<!-- Price End -->

				<!-- Size Start -->
					<div class="mb-5"> <h5 class="font-weight-semi-bold mb-4 filter">Filter by Size</h5>

				</div>
				<!-- Size End -->
			</div>
			<!-- Shop Sidebar End -->


			<!-- Shop Product Start -->
			<div class="col-lg-9 col-sm-9">
				<div class="row">
					<div class="col-md-10">
						<h2 style="padding-left: 2% title">{{title}}</h2>
					</div>
					<div class="col-md-2">
						<div class="input-group mb-2 d-flex">
							<div class="select">
								<select name="sort_by" onchange="location = this.value;" class="form-control border-white">
									<option disabled="disabled" value="2" selected>SORT BY</option>
									<option value="?sort_by=name&order=ASC">A -> Z</option>
									<option value="?sort_by=name&order=DESC">Z -> A</option>
									<option value="?sort_by=price&order=ASC">Low to high</option>
									<option value="?sort_by=price&order=DESC">High to low</option>
								</select>
							</div>
						</div>
					</div>
				</div>

				<!-- Product -->
				<div class="col-12 pb-1">
					<nav aria-label="Page navigation">
						<div class="row">
							{% for p in products %}
								<div class="col-md-6 col-lg-4 col-xl-3 mb-4">
									<div class="product-grid">
										<div class="product-image">
											<a href="{{path('proDetail_page', {'id': p.id})}}" class="image">
												{% set img = p.image %}
												<img src="{{asset('images/'~img)}}" class="card-img-top" alt=""/>
											</a>
											<ul class="product-links">
												<li>
													<a href="#">
														<i class="fa fa-search"></i>
													</a>
												</li>
												<li>
													<a href="#">
														<i class="fa fa-heart"></i>
													</a>
												</li>
												<li>
													<a href="#">
														<i class="fa fa-random"></i>
													</a>
												</li>
											</ul>
											<input type="hidden" id="id" value="{{p.id}}">
											<input type="hidden" id="count" value="1"/>
											<button class="add-to-cart fw-bold" name="insert_button{{p.id}}" onclick="insert_row()">Add to Cart</button>
										</div>
										<div class="product-content">
											<h3 class="title">
												<a href="{{path('proDetail_page', {'id': p.id})}}">{{p.name}}</a>
											</h3>
											<div class="price">
												<a href="{{path('proDetail_page', {'id': p.id})}}">${{p.price}}</a>
											</div>
										</div>
									</div>
								</div>
							{% endfor %}

						</div>
						{# <ul class="pagination justify-content-center mb-3">
																																																							<li class="page-item disabled">
																																																								<a class="page-link" href="#" aria-label="Previous">
																																																									<span aria-hidden="true">&laquo;</span>
																																																									<span class="sr-only">Previous</span>
																																																								</a>
																																																							</li>
																																																							<li class="page-item active">
																																																								<a class="page-link" href="#">1</a>
																																																							</li>
																																																							<li class="page-item">
																																																								<a class="page-link" href="#">2</a>
																																																							</li>
																																																							<li class="page-item">
																																																								<a class="page-link" href="#">3</a>
																																																							</li>
																																																							<li class="page-item">
																																																								<a class="page-link" href="#" aria-label="Next">
																																																									<span aria-hidden="true">&raquo;</span>
																																																									<span class="sr-only">Next</span>
																																																								</a>
																																																							</li>
																																																						</ul> #}
					</nav>
				</div>
			</div>
		</div>
		<!-- Shop Product End -->
	</div>
</div>

<script script script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/js/select2.min.js"></script>

{# Insert into Cart #}
<script>
function insert_row() {
var id = document.getElementById("id").value;
var count = document.getElementById("count").value;

$.ajax({
type: 'post',
url: '/cart/add',
data: {
id: id,
count: count
},
success: function (response) {
window.location.href = '/cart';
// alert("A new product was added");

}
});
}
</script>
<!-- Shop End -->{% endblock %}
