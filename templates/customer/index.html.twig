{% extends 'base.html.twig' %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{asset('css/header.css')}}">
{% endblock %}
{% block body %}
	<div class="row">
		<div class="col-lg-4">
			<div class="card mb-4">
				<div class="card-body text-center">
					<img src="https://i.pinimg.com/564x/ab/ce/a2/abcea2d843a64c20de94984db8f5989b.jpg" alt="avatar" class="rounded-circle img-fluid" style="width: 150px;">
					<h5 class="my-3">{{user.username}}</h5>
					{# <p class="text-muted mb-1">Full Stack Developer</p> #}
					<div class="d-flex justify-content-center mb-2">
						<a type="button" class="btn btn-primary " href="{{path('cus_edit')}}">Edit</a>
					</div>
				</div>
			</div>

		</div>
		<div class="col-lg-8">
			<div class="card mb-4">
				<div class="card-body">
					<div class="row">
						<div class="col-sm-3">
							<p class="mb-0">Full Name</p>
							{# <span>{{ form.fullname }}</span> #}
						</div>
						<div class="col-sm-9">
							<p class="text-muted mb-0">{{user.fullname}}</p>
						</div>
					</div>
					<hr>
					<div class="row">
						<div class="col-sm-3">
							<p class="mb-0">Birthday</p>
						</div>
						<div class="col-sm-9">
							<p class="text-muted mb-0">{{user.Birthday|date('d/m/Y')}}</p>
						</div>
					</div>
					<hr>
					<div class="row">
						<div class="col-sm-3">
							<p class="mb-0">Address</p>
						</div>
						<div class="col-sm-9">
							<p class="text-muted mb-0">{{user.Address}}</p>
						</div>
					</div>
					<hr>
					<div class="row">
						<div class="col-sm-3">
							<p class="mb-0">Phone</p>
						</div>
						<div class="col-sm-9">
							<p class="text-muted mb-0">{{user.phone}}</p>
						</div>
					</div>
					<hr>
					<div class="row">
						<div class="col-sm-3">
							<p class="mb-0">Gender</p>
						</div>
						<div class="col-sm-9">
							{% if user.gender == 0 %}
								<p class="text-muted mb-0">Male</p>
							{% else %}
								<p class="text-muted mb-0">Female</p>
							{% endif %}
						</div>
					</div>

				</div>
			</div>
		</div>
	</div>
{% endblock %}
