{% extends 'admin.html.twig' %}
{% block stylesheets %}
	<link href="{{asset('css/admin.css')}}" rel="stylesheet" media="all">
{% endblock %}

{% block body %}
	<section class="header mx-5">
		<div class="container mt-4 mb-3">
			<div class="text-center lh-1 mb-2">
				<h4 class="fw-bold">Add Supplier</h4>
			</div>
			<div class="d-flex justify-content-end">
				<span>Branch: DANA_ISCHG</span>
			</div>
		</div>

		<div class="container-boder">
			{{ form_start(formSupp) }}
			<div class="col-md-12">
				<div class="row">
					<div class="row">
						<div class="col-md-6">
							<div class="forms-inputs mt-3">
								{{ form_label(formSupp.name) }}
								{{ form_widget(formSupp.name, {'attr':{'autocomplete': 'off'}}) }}
							</div>
						</div>

						<div class="col-md-6">
							<div class="forms-inputs mt-3">
								{{ form_label(formSupp.phone) }}
								{{ form_widget(formSupp.phone, {'attr':{'autocomplete': 'off'}}) }}
							</div>
						</div>

						<div class="col-md-1">
							<div class="forms-inputs mt-3">
								<div class="row">
									{{ form_label(formSupp.address) }}
									<div class="col-lg-12">
										{{ form_widget(formSupp.address, {'attr':{'autocomplete': 'off'}}) }}
										{{ form_errors(formSupp.address) }}
									</div>
								</div>
							</div>
						</div>
						<div class="col-md-1">
							<div class="forms-inputs mt-3">
								<div class="row">
									{{ form_label(formSupp.email) }}
									<div class="col-lg-12">
										{{ form_widget(formSupp.email, {'attr':{'autocomplete': 'off'}}) }}
										{{ form_errors(formSupp.email) }}
									</div>
								</div>
							</div>
						</div>
						<div class="col-md-12">
							<div class="add mt-3">
								{{form_row(formSupp.save, {'attr':{'class': 'btn btn-dark me-4'}})}}
							</div>
						</div>

						{{ form_end(formSupp) }}
					</div>
				</div>
			</div>
		</div>
	</tbody>
</section>{% endblock %}
