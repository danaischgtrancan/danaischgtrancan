{% extends 'admin.html.twig' %}
{% block stylesheets %}
	<link href="{{asset('css/admin.css')}}" rel="stylesheet" media="all">
{% endblock %}

{% block body %}
	<section class="header mx-5">
		<div class="container mt-4 mb-3">
			<div class="text-center lh-1 mb-2">
				<h4 class="fw-bold">Supplier Management</h4>
			</div>
			<div class="d-flex justify-content-end">
				<span>Branch: DANA_ISCHG</span>
			</div>
		</div>

		{# {% for message in app.flashes('success') %}
			<div class="alert alert-success mt-5 text-center">
				{{ message }}
			</div>
		{% endfor %} #}

		<table class="mt-2 table table-bordered">
			<div class="row">
				<div class="col-lg-6">
					<h5>
						Supplier List</h5>
				</div>
				<div class="col-lg-6 mx-auto">
					<div class="d-grid gap-2 d-md-flex justify-content-md-end">
						<button class="btn btn-dark me-4" type="button">
							<a href="{{path('addSupp_page')}}" class="text-decoration-none text-reset">Add new Supplier</a>
						</button>
					</div>
				</div>
			</div>

			<thead class="bg-dark text-white text-center">
				<tr>
					<th scope="col">Supplier ID</th>
					<th scope="col">Supplier Name</th>
					<th scope="col">Phone number</th>
					<th scope="col">Email</th>
					<th scope="col">Address</th>	

					{# Edit, Delete #}
					<th scope="col">Edit</th>
					<th scope="col">Delete</th>
					{# Edit, Delete #}

				</tr>
			</thead>
			{% for s in suppliers %}
				<tr class="text-center align-middle">
					<th scope="row">{{s.id}}</th>
					<td>{{s.name}}</td>
					<td>{{s.phone}}</td>
					<td>{{s.email}}</td>
					<td>{{s.address}}</td>

					{# Edit, Delete #}
					<td>
						<a href="{{path('editSupp_page', {'id':s.id})}}">
							<button class="bi bi-pencil-square border-0 bg-white"></button>
						</a>	
					</td>
					<td>
						<a href="{{path('deleteSupp_page', {'id':s.id})}}">
							<button class="bi bi-trash3 border-0 bg-white" onclick="return confirm('Are you sure to remove?')"></button>
						</a>
					</td>
				</tr>
			{% endfor %}
		</table>
	</tbody>

	{% endblock %}
