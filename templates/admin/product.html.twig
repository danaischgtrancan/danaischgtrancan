		<div class="container-boder">
			{{ form_start(form) }}
			<div class="col-md-12">
				<div class="row">
					<div class="row">
						<div class="col-md-6">
							<div class="forms-inputs mt-3">
								{{ form_label(form.name) }}
								{{ form_widget(form.name, {'attr':{'autocomplete': 'off'}}) }}
								{# <div class="invalid-feedback">A valid email is required!</div> #}
							</div>
						</div>

						<div class="col-md-6">
							<div class="forms-inputs mt-3">
								{{ form_label(form.descriptions) }}
								{{ form_widget(form.descriptions, {'attr':{'autocomplete': 'off'}}) }}
								{# <div class="invalid-feedback">A valid email is required!</div> #}
							</div>
						</div>

						<div class="col-md-3">
							<div class="forms-inputs mt-3">
								{{ form_label(form.price) }}
								{{ form_widget(form.price, {'attr':{'autocomplete': 'off'}}) }}
								{{ form_errors(form.price) }}
							</div>
						</div>

						<div class="col-md-3">
							<div class="forms-inputs mt-3">
								{{ form_label(form.quantity) }}
								{{ form_widget(form.quantity, {'attr':{'autocomplete': 'off'}}) }}
								{{ form_errors(form.quantity) }}
							</div>
						</div>

						<div class="col-md-3 mb-3">
							<div class="ms-3 mt-3">
								{{ form_label(form.for_gender) }}
								{{ form_widget(form.for_gender) }}
							</div>
						</div>

						<div class="col-md-3 mb-3">
							<div class="ms-3 mt-3">
								{{ form_label(form.status) }}
								{{ form_widget(form.status) }}
							</div>
						</div>

						<div class="col-md-6">
							<div class="forms-inputs mt-2 d-flex">
								<div class="row">
									<div class="col-lg-4">
										{{ form_label(form.image, 'Choose Image:', {
									'label_attr': {'class': 'me-3 ms-3'}
									}) 
									}}
									</div>
									<div class="col-lg-8">
										{{ form_widget(form.image) }}
									</div>

								</div>
								{# <label class="me-3 ms-3">Choose Image:</label>
