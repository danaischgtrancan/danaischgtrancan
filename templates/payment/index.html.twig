{% extends 'base.html.twig' %}
{% block stylesheets %}
	<link href="{{asset('css/header.css')}}" rel="stylesheet" media="all">

{% endblock %}

{% block body %}
	<div class="row ">
		<div class="col-md-7">
			<div class="right border">
				<div class="header-payment fw-bold">Order Summary</div>
				<p>8 items</p>
				{% set total = 0 %}
				{% for p in products %}
					<hr>
					<div class="row item d-flex align-items-center">
						{% set img = p.image %}
						<div class="col-4 align-self-center" style="width: 15%"><img class="img-fluid" src="{{asset('images/'~img)}}"></div>
						<div class="col-8">
							<div class="pb-2">
								<b>${{p.unitTotal}}</b>
							</div>
							<div class=" text-muted">{{p.p_name}}</div>
							<div class="">Quantity:
								{{p.num}}</div>
						</div>
					</div>
					{% set total = total + p.unitTotal %}
				{% endfor %}


			</div>
		</div>
		<form name="formAddSupplier" method="POST" class="col-md-5 p-0">
			<div class="left border">
				<div class="row">
					<span class="header-payment fw-bold text-dark">Payment</span>
				</div>
				<span>Name:</span>
				<input type="text" class="input" name="name" value="{{user.fullname}}">
				<span>Phone number:</span>
				<input type="text" class="input" name="phone" value="{{user.phone}}">
				<span>Address:</span>
				<input type="text" class="input" name="address" value="{{user.address}}">
			</div>
			<hr>
			<div class="row lower">
				<div class="col text-left">Subtotal</div>
				<div class="col text-right">${{total}}</div>
			</div>
			<div class="row lower">
				<div class="col text-left">Delivery Standar</div>
				<div class="col text-right">$5.00</div>
			</div>
			<div class="row lower">
				<div class="col text-left">
					<b>Total to pay</b>
				</div>
				<div class="col text-right">
					<b>${{total + 5 }}</b>
				</div>
				{# <input class="input" type="hidden" name="total" value=""> #}
			</div>
			<div class="mt-3">
			</button>

			<form action="{{path('addOrder')}}" method="POST">
				<button class="btn-payment" name="btnPayment">Payment</button>
			</form>
		</div>
	</form>
</div>{% endblock %}
