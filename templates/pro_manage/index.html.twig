{% extends 'admin.html.twig' %}
{% block stylesheets %}
	<link href="{{asset('css/admin.css')}}" rel="stylesheet" media="all">
{% endblock %}

{% block body %}
	<section class="header mx-5">
		<div class="container mt-4 mb-3">
			<div class="text-center lh-1 mb-2">
				<h4 class="fw-bold">Add Product</h4>
			</div>
			<div class="d-flex justify-content-end">
				<span>Branch: DANA_ISCHG</span>
			</div>
		</div>
		<div class="container-boder">
			{{ form_start(productForm) }}
			<div class="col-md-12">
				<div class="row">
					<div class="row">
						<div class="col-md-6">
							<div class="forms-inputs mt-3">
								{{ form_label(productForm.name) }}
								{{ form_widget(productForm.name, {'attr':{'autocomplete': 'off'}}) }}
							</div>
						</div>

						<div class="col-md-6">
							<div class="forms-inputs mt-3">
								{{ form_label(productForm.descriptions) }}
								{{ form_widget(productForm.descriptions, {'attr':{'autocomplete': 'off'}}) }}
							</div>
						</div>

						<div class="col-md-1">
							<div class="forms-inputs mt-3">
								<div class="row">
									{{ form_label(productForm.price) }}
									<div class="col-lg-12">
										{{ form_widget(productForm.price, {'attr':{'autocomplete': 'off'}}) }}
										{{ form_errors(productForm.price) }}
									</div>
								</div>
							</div>
						</div>

						<div class="col-md-3">
							<div class="forms-inputs mt-2 d-flex">
								<div class="row mt-2">
									{{ form_label(productForm.image, 'Choose Image:', {
									        'label_attr': {'class': 'me-3'}
									    }) }}
									<div class="col-lg-12">
										{{ form_widget(productForm.image, {
									        'attr': {'class': 'me-3'}
                                    }) 
                                    }}
									</div>

								</div>
							</div>
						</div>

						<div class="col-md-2">
							<div class="dropdown">
								<div class="forms-inputs mt-3">
									{{ form_label(productForm.category)}}
									<div class="col-lg-12">
										{{ form_widget(productForm.category) }}
									</div>
								</div>
							</div>
						</div>

                        <div class="col-md-2">
							<div class="dropdown">
								<div class="forms-inputs mt-3">
									{{ form_label(productForm.supplier)}}
									<div class="col-lg-12">
										{{ form_widget(productForm.supplier) }}
									</div>
								</div>
							</div>
						</div>

						<div class="col-md-2 mb-3">
							<div class="ms-3 mt-3 ">
								{{ form_label(productForm.for_gender) }}
								{{ form_widget(productForm.for_gender) }}
							</div>
						</div>

						<div class="col-md-2 mb-3">
							<div class="ms-3 mt-3">
								{{ form_label(productForm.status) }}
								{{ form_widget(productForm.status) }}
							</div>
						</div>

						<div class="col-md-12">
							<div class="add mt-3">
								{{form_row(productForm.save, {'attr':{'class': 'btn btn-dark me-4'}})}}
							</div>
						</div>

						{{ form_end(productForm) }}
					</div>
				</div>
			</div>
		</div>


		<table class="mt-2 table table-bordered">
			<div>
				<h5>
					Product List</h5>
			</div>
			<thead class="bg-dark text-white text-center">
				<tr>
					<th scope="col">Product ID</th>
					<th scope="col">Product Name</th>
					<th scope="col">Status</th>
					<th scope="col">Descriptions</th>
					<th scope="col">Price</th>
					<th scope="col">Category</th>
					{# <th scope="col">Supplier</th> #}
					<th scope="col">Image</th>

					{# Edit, Delete #}
					<th scope="col">Edit</th>
					<th scope="col">Delete</th>
					{# Edit, Delete #}

				</tr>
			</thead>
			{% for p in products %}
				<tr class="text-center align-middle">
					<th scope="row">{{p.id}}</th>
					<td>{{p.name}}</td>
					<td>{{p.status}}</td>
					<td>{{p.descriptions}}</td>
					<td>{{p.price}}</td>
					<td>{{p.category.name}}</td>
					{# <td>{{p.proSups.supplier.name}}</td> #}
					<td>
						<img src="{{asset('images/Dresses.png')}}" width="100" height="auto" alt="" class="mx-3">
					</td>

					{# Edit, Delete #}
					<td>
						<a href="">
							<i class="bi bi-pencil-square" style="color: black;"></i>
						</a>
					</td>
					<td>
						<a href="">
							<i class="bi bi-trash3" style="color: black;"></i>
						</a>
					</td>
				</tr>
			{% endfor %}
		</table>
	</tbody>
</section>{% endblock %}
